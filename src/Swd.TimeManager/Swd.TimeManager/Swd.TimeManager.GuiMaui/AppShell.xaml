<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Swd.TimeManager.GuiMaui.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Swd.TimeManager.GuiMaui"
    Shell.FlyoutBehavior="Disabled"
    Title="Swd.TimeManager.GuiMaui">

    <Shell.MenuBarItems>
        <MenuBarItem Text="File">
            <MenuFlyoutItem Text="Exit"  />
        </MenuBarItem>

    </Shell.MenuBarItems>

    <ShellContent
        Title="Intro"
        ContentTemplate="{DataTemplate local:IntroPage}"
        Route="intro" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="main" />

    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:LoginPage}"
        Route="login" />

    <ShellContent
       Title="Home"
       ContentTemplate="{DataTemplate local:OverviewPage}"
       Route="overview" />

</Shell>
