<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Swd.TimeManager.GuiMaui.Views.TaskEditPage"
             xmlns:viewmodel="clr-namespace:Swd.TimeManager.GuiMaui.ViewModel"
             Title="TaskEditPage">
    
    <ContentPage.BindingContext>
        <viewmodel:TaskEditPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Grid Margin="10" x:Name="editGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Text="Taskname" Margin="5"/>
            <Entry Grid.Row="1" Margin="5" Text="{Binding Task.Name, Mode=TwoWay}" />
        </Grid>
        <Button Text="Save task" Margin="5" Command="{Binding SaveCommand}" />
        <Button Text="Cancel" Margin="5" Command="{Binding CancelCommand}" />

    </VerticalStackLayout>
</ContentPage>