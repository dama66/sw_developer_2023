<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Swd.TimeManager.GuiMaui.Views.ProjectEditPage"
             xmlns:viewmodel="clr-namespace:Swd.TimeManager.GuiMaui.ViewModel"
             Title="ProjectEditPage">
    
    <ContentPage.BindingContext>
        <viewmodel:ProjectEditPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Grid Margin="10" x:Name="editGrid">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Text="Projektname" Margin="5"/>
            <Entry Grid.Row="1" Margin="5" Text="{Binding Project.Name, Mode=TwoWay}" />
        </Grid>
        <Button Text="Save project" Command="{Binding SaveCommand}" />
        <Button Text="Cancel" Command="{Binding CancelCommand}" />

    </VerticalStackLayout>
</ContentPage>