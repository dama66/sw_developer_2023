<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Swd.TimeManager.GuiMaui.Views.PersonAddPage"
             xmlns:viewmodel="clr-namespace:Swd.TimeManager.GuiMaui.ViewModel"
             Title="PersonAddPage">
    
    <ContentPage.BindingContext>
        <viewmodel:PersonAddPageViewModel />
    </ContentPage.BindingContext>

    <VerticalStackLayout>
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Text="First Name" Margin="5"/>
            <Entry Grid.Row="1" Margin="5" Text="{Binding Person.FirstName, Mode=TwoWay}" />
            <Label Grid.Row="2" Text="Last Name" Margin="5"/>
            <Entry Grid.Row="3" Margin="5" Text="{Binding Person.LastName, Mode=TwoWay}" />
            <Label Grid.Row="4" Text="Email" Margin="5"/>
            <Entry Grid.Row="5" Margin="5" Text="{Binding Person.Email, Mode=TwoWay}" />
            <Label Grid.Row="6" Text="Entry date" Margin="5"/>
            <DatePicker Grid.Row="7" Margin="5" Date="{Binding EntryDateRaw}"/>
        </Grid>
        <Button Text="Save person" Margin="5" Command="{Binding SaveCommand}" />
        <Button Text="Cancel" Margin="5" Command="{Binding CancelCommand}" />

    </VerticalStackLayout>
</ContentPage>